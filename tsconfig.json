{
  "extends": "./tsconfig.base.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node"],
    "outDir": "dist",
    "declaration": false,
    "composite": false,
    "paths": {
      "@packages/*": ["packages/*/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "references": [
    { "path": "./packages/http-server" },
    { "path": "./packages/ioc" },
    { "path": "./packages/logger" }
  ]
}
