{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "lib": ["esnext"],
    "types": ["./src/common/types"],
    "module": "CommonJS",
    "baseUrl": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["./src/main.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
