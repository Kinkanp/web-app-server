{
  "extends": "./tsconfig.base.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["./src/common/types", "node"],
    "outDir": "dist",
    "paths": {
      "@packages/*": ["packages/*/index.ts"]
    },
    "declaration": false,
    "composite": false
