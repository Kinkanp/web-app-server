{
  "name": "web-app-server",
  "version": "1.0.0",
  "keywords": [],
  "author": "Ivan Romanenko",
  "license": "ISC",
  "scripts": {
    "start": "concurrently -r \"npm:tsc:watch\" \"npm:nodemon:watch\"",
    "nodemon:watch": "nodemon --delay 0.1 --watch dist --watch packages --exec 'node dist/main.js'",
    "tsc:watch": "npx tsc -b --watch",
    "build": "npx tsc -b tsconfig.build.json",
    "inspect": "nodemon --config nodemon.json --inspect ./src/main.ts",
    "test": "npm run test --workspaces && npm run test:w -- --run",
    "test:w": "vitest --dir ./src/",
    "test:e2e": "npm run test:e2e:w -- --run",
    "test:e2e:w": "vitest -c ./tests/vitest.config.ts",
    "coverage": "vitest run -c ./tests/vitest.config.ts --coverage",
    "prisma:format": "npx prisma format --schema src/common/database/schema.prisma",
    "models:generate": "npx prisma generate --schema src/common/database/schema.prisma",
    "migration:create": "npx prisma migrate dev --schema src/common/database/schema.prisma --create-only",
    "migration:deploy:dev": "npx prisma migrate dev --schema src/common/database/schema.prisma",
    "migration:deploy": "npx prisma migrate deploy --schema src/common/database/schema.prisma",
    "migration:rollback": "npx prisma migrate resolve --schema src/common/database/schema.prisma",
    "lint": "eslint -c .eslintrc.json src/* && eslint -c .eslintrc.json packages/*"
  },
  "workspaces": [
    "packages/ioc",
    "packages/http-server"
  ],
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vitest/coverage-c8": "^0.25.3",
    "concurrently": "^7.6.0",
    "eslint": "^8.27.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-workspaces": "^0.7.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "ajv": "^8.11.2",
    "ajv-errors": "^3.0.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.2",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.8.0",
    "prisma": "^4.6.1",
    "uuid": "^9.0.0",
    "reflect-metadata": "^0.1.13",
    "vitest": "^0.25.3",
    "supertest": "^6.3.1"
  }
}
